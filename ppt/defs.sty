	\begin{pmatrix}
		1 & 1	& \ldots &	1 \\
		1 & #1 	& \ldots & #1^{#2-1} \\
		\vdots 	& \vdots & \ddots & \vdots \\
		1 & #1^{#2-1} & \ldots & #1^{(#2-1)(#2-1)}
	\end{pmatrix}
}

